
<div class="relative bg-cover overflow-hidden rounded-lg bg-cover bg-no-repeat bg-center p-12 text-center mt-10 h-screen">
  <%= image_tag @about.image_url if @about.image %>
</div>

<h2 class="mb-4 text-4xl font-semibold leading-none tracking-tight text-center text-dark-green md:text-5xl lg:text-6xl mt-6">
  <%= @about.title %>
</h2>

<%= render 'about_content', about_content: @about.content %>

<div>
  <%= link_to 'Edit', edit_about_path(@about), class: "focus:outline-none inline-block text-base px-4 py-2 leading-none border rounded font-semibold border-[#f5f5f5] text-[#f5f5f5] bg-[#855d9a] mt-4 lg:mt-0" %>
</div>